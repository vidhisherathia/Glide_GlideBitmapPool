<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:padding="20dp">

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:onClick="normalResource"
        android:text="normal-resource" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:onClick="normalFile"
        android:text="normal-file" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:onClick="resourceOptimized"
        android:text="resource-optimized" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:onClick="fileOptimized"
        android:text="file-optimized" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:onClick="downSample"
        android:text="down-sample" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:onClick="clearMemory"
        android:text="clear-memory" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"/>


    <ProgressBar
        android:id="@+id/prgsBar"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_gravity="center_horizontal"/>



</LinearLayout>